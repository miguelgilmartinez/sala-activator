{# templates/user/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Gestión de Usuarios{% endblock %}

{% block body %}
    <div class="container mt-4">
        {# Mostrar mensajes flash #}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label == 'error' ? 'danger' : label }} alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endfor %}
        <h1>Gestión de Usuarios</h1>
        <a href="{{ path('app_register') }}" class="btn btn-primary mb-3 offset-10">Crear nuevo usuario</a>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Email</th>
                    <th>Nombre</th>
                    <th>Apellidos</th>
                    <th>Roles</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.nombre }}</td>
                    <td>{{ user.apellidos }}</td>
                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn btn-sm btn-info">Ver</a>
                            <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-sm btn-warning">Editar</a>
                            <form method="post" action="{{ path('app_user_delete', {'id': user.id}) }}" onsubmit="return confirm('¿Estás seguro de que deseas eliminar este usuario?');" style="display: inline-block;">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                <button class="btn btn-sm btn-danger">Eliminar</button>
                            </form>
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">No se encontraron usuarios</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

 
 

 