
{% extends 'base.html.twig' %}

{% block title %}Editar Usuario{% endblock %}

{% block body %}
    <div class="container mt-4">
        {# Mostrar mensajes flash #}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label == 'error' ? 'danger' : label }} alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endfor %}

        <h1>Editar Usuario</h1>

        {{ form_start(form) }}
            <div class="row mb-3">
                <div class="col-md-6">
                    {{ form_row(form.email) }}
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    {{ form_row(form.nombre) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.apellidos) }}
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    {{ form_row(form.plainPassword.first, {'help': 'Déjalo en blanco para mantener la contraseña actual'}) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.plainPassword.second, {'help': 'Déjalo en blanco para mantener la contraseña actual'}) }}
                </div>
            </div>
           

            <button class="btn btn-primary">Guardar</button>
            <a href="{{ path('app_user_index') }}" class="btn btn-secondary">Volver a la lista</a>
        {{ form_end(form) }}
    </div>
{% endblock %}

