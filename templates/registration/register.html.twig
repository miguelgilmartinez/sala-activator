
{% extends 'base.html.twig' %}

{% block title %}Registro{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h1 class="h3 mb-0">Registro</h1>
                </div>
                <div class="card-body">
                    {{ form_start(registrationForm) }}
                        <div class="mb-3">
                            {{ form_label(registrationForm.email) }}
                            {{ form_widget(registrationForm.email) }}
                            {{ form_errors(registrationForm.email) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(registrationForm.nombre) }}
                            {{ form_widget(registrationForm.nombre) }}
                            {{ form_errors(registrationForm.nombre) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(registrationForm.apellidos) }}
                            {{ form_widget(registrationForm.apellidos) }}
                            {{ form_errors(registrationForm.apellidos) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(registrationForm.plainPassword) }}
                            {{ form_widget(registrationForm.plainPassword) }}
                            {{ form_errors(registrationForm.plainPassword) }}
                        </div>

                        <div class="mb-3">
                            <div class="form-check">
                                {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                                {{ form_label(registrationForm.agreeTerms, null, {'label_attr': {'class': 'form-check-label'}}) }}
                                {{ form_errors(registrationForm.agreeTerms) }}
                            </div>
                        </div>

                        <button type="submit" class="btn btn-primary w-100">Registrarse</button>
                    {{ form_end(registrationForm) }}

                    <div class="mt-3 text-center">
                        <p>¿Ya tienes una cuenta? <a href="{{ path('app_login') }}">Inicia sesión</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}